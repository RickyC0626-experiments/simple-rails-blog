<h1>Blog Posts</h1>
<div class="row">
<% if @posts.length() == 0 %>
  <div class="col-sm-4 mb-3">
    <div class="card">
      <div class="card-body">
          <p class="card-text text-truncate">There are no posts</p>

          <%= link_to "Create Post", new_post_path %>
      </div>
    </div>
  </div>
<% else %>
  <% @posts.each do |post| %>
    <div class="col-sm-4 mb-3">
      <div class="card">
        <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted">Author</h6>
            <p class="card-text text-truncate"><%= post.body %></p>

            <%= link_to "Read More", post_path(post), :class => 'card-link' %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
</div>