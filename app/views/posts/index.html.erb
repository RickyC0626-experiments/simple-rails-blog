<h1>Blog Posts</h1>
<% @posts.each do |post| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted">Author</h6>
        <p class="card-text"><%= post.body %></p>

        <%= link_to "Read More", post_path(post), :class => 'card-link' %>
    </div>
  </div>
<% end %>