<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class="card">
    <div class="card-body">
      <p class="card-text">
        <strong><%= comment.username %></strong>: <%= comment.body %><br><br>
        <%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
    </div>
  </div>
<% end %>
<hr>